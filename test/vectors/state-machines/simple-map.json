{
    "Comment": "Simple state machine with one map state",
    "StartAt": "ValidateAll",
    "States": {
        "ValidateAll": {
            "Type": "Map",
            "InputPath": "$.detail",
            "ItemsPath": "$.shipped",
            "MaxConcurrency": 0,
            "Iterator": {
                "StartAt": "Validate",
                "States": {
                    "Validate": {
                        "Type": "Task",
                        "Resource": "arn:aws:lambda:us-east-1:123456789012:function:ship-val",
                        "End": true
                    }
                }
            },
            "ResultPath": "$.detail.shipped",
            "End": true
            }
    }
}